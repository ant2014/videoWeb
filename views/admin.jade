extends layout

block content
  .container
    .row
      form.form-horizontal(method='post', action='/admin/movie/new')
        input(type="hidden", name="movie[_id]", value="#{movie._id}")
        .form-group
          label.col-sm-3.control-label(for='inputTitle') 电影名字
          .col-sm-6
            input#inputTitle.form-control(type='text', name='movie[title]', value='#{movie.title}', required)
        .form-group
          label.col-sm-3.control-label(for='inputDoctor') 导演
          .col-sm-6
            input#inputDoctor.form-control(type='text', name='movie[doctor]', value='#{movie.doctor}', required)
        .form-group
          label.col-sm-3.control-label(for='inputCountry') 国家
          .col-sm-6
            input#inputCountry.form-control(type='text', name='movie[country]', value='#{movie.country}', required)
        .form-group
          label.col-sm-3.control-label(for='inputLanguage') 语言
          .col-sm-6
            input#inputLanguage.form-control(type='text', name='movie[language]', value='#{movie.language}', required)
        .form-group
          label.col-sm-3.control-label(for='inputYear') 上映年份
          .col-sm-6
            input#inputYear.form-control(type='text', name='movie[year]', value='#{movie.year}', required)
        .form-group
          label.col-sm-3.control-label(for='inputPoster') 海报地址
          .col-sm-6
            input#inputPoster.form-control(type='text', name='movie[poster]', value='#{movie.poster}', required)
        .form-group
          label.col-sm-3.control-label(for='inputFlash') 视频地址
          .col-sm-6
            input#inputFlash.form-control(type='text', name='movie[flash]', value='#{movie.flash}', required)
        .form-group
          label.col-sm-3.control-label(for='inputSummary') 简介
          .col-sm-6
            input#inputSummary.form-control(type='text', name='movie[summary]', value='#{movie.summary}', required)
        .form-group
          .col-sm-offset-3.col-sm-6
            button.btn.btn-default(type='submit') 录入
